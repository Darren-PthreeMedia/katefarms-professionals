[
  {
    "name": "theme_info",
    "theme_name": "Starter theme",
    "theme_version": "1.0.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https:\/\/github.com\/Shopify\/starter-theme",
    "theme_support_url": "https:\/\/github.com\/Shopify\/starter-theme\/issues",
    "theme_packaged_with": "@shopify\/slate-tools@1.0.0-beta.19"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent",
        "default": "#c4cdd5",
        "info": "Buttons and special ornaments"
      },
      {
        "type": "color",
        "id": "color_body_text",
        "label": "Text",
        "default": "#161d25"
      },
      {
        "type": "color",
        "id": "color_main_bg",
        "label": "Background",
        "default": "#fff"
      }
    ]
  },
  {
    "name": "Analytics",
    "settings": [
      {
        "type": "checkbox",
        "id": "use_analytics_scripts",
        "label": "Use analytics scripts for tracking impressions, orders, etc.",
        "default": false
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "font_heading",
        "default": "helvetica_n4",
        "label": "Headings"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "default": "helvetica_n4",
        "label": "Body text"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social sharing image"
      },
      {
        "type": "image_picker",
        "id": "share_image",
        "label": "Image",
        "info": "Shown when sharing a link on social media. [Learn more](https:\/\/help.shopify.com\/manual\/using-themes\/troubleshooting\/showing-social-media-thumbnail-images\/) about image thumbnails."
      },
      {
        "type": "header",
        "content": "Social sharing options"
      },
      {
        "type": "checkbox",
        "id": "social_sharing_blog",
        "label": "Enable sharing for blog articles",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_facebook",
        "label": "Share on Facebook",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_twitter",
        "label": "Tweet on Twitter",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_pinterest",
        "label": "Pin on Pinterest",
        "default": true
      },
      {
        "type": "header",
        "content": "Sharing links"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter link"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook link"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest link"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram link"
      },
      {
        "type": "text",
        "id": "social_snapchat_link",
        "label": "Snapchat link"
      },
      {
        "type": "text",
        "id": "social_tumblr_link",
        "label": "Tumblr link"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "Youtube link"
      },
      {
        "type": "text",
        "id": "social_vimeo_link",
        "label": "Vimeo link"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "checkbox",
        "id": "cart_notes_enable",
        "label": "Enable cart notes",
        "default": true
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "Will be scaled down to 32 x 32px"
      }
    ]
  },
  {
    "name": "Reviews",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_reviews",
        "label": "Show product page reviews?"
      }
    ]
  },
  {
    "name": "Footer Options",
    "settings": [
      {
        "type": "richtext",
        "id": "footer_disclaimers",
        "label": "Footer Disclaimers"
      },
      {
        "type": "checkbox",
        "id": "enable_signup",
        "label": "Enable Footer Signup Form",
        "default": true
      },
      {
        "type": "text",
        "id": "signup_header",
        "label": "Signup Header Text"
      },
      {
        "type": "text",
        "id": "signup_subheader",
        "label": "Signup Sub Header Text"
      },
      {
        "type": "html",
        "id": "signup_policy",
        "label": "Signup Policy Text"
      },
      {
        "type": "url",
        "id": "signup_policy_url",
        "label": "Signup Privacy Policy Link"
      }
    ]
  },
  {
    "name": "Announcement Bar",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_announcement_bar",
        "label": "Show announcement bar?"
      },
      {
        "type": "html",
        "id": "announcement_bar_html",
        "label": "Announcement Bar HTML"
      }
    ]
  },
  {
    "name": "Super Header",
    "settings": [
      {
        "type": "url",
        "id": "for_clinicians_url",
        "label": "For Clinicians URL"
      }
    ]
  },
  {
    "name": "Compare Formulas",
    "settings": [
      {
        "type": "text",
        "id": "comparison_table_id",
        "label": "TablePress ID for Comparison Table"
      }
    ]
  }
]