.swell-referral-history-holder {
  width: 100%;
  max-width: 768px;
}

.swell-referral-history-container p{
  font-size: 1.3125rem;
  font-weight: 300;
}

.swell-referral-history-container h2 {
  font-size: 2.75rem;
  font-weight: bold;
  letter-spacing: -0.5px;
  line-height: 51px;
  margin-bottom: 0.75rem;
}

.swell-referral-history-container h3 {
  font-size: 2rem;
  font-weight: 300;
  line-height: 37px;
}


.swell-referral-history {
	width: 100%;
  overflow-y: overlay;
}

.swell-referral-history .swell-referral-history-table {
    width: 100%;
}

.swell-referral-history-table thead td{
  font-size: 2rem;
  margin-bottom: 0.5rem
}

.swell-referral-history-table td{
  font-size: 1.3125rem;
  width: 55%;
}

.hidden-div {
	display: none;
}

.swell-referral-history::-webkit-scrollbar {
  width: 8px;
  padding-left:1%;
}

.swell-referral-history::-webkit-scrollbar-thumb {
  background: #6bcdb7;
  border-radius: 10px;
}

.swell-referral-history::-webkit-scrollbar-track {
  background: #234b59;
  border-radius: 10px;
}

.referral-his-div-mobile {
  display: none;
  min-height: 25rem;
  width: 100%;
  background: #01bea5;
}
