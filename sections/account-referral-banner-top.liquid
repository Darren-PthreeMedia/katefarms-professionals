<section class="account-referral-banner-top bg-primary-blue text-white pb-6 pt-8">
  <div class="container">

    <div class="w-full sm:w-3/4">
      <h3 class="hero-simple-title account-referral-title">
        {{ 'customer.account.top_referral_banner.title' | t }}
      </h3>

      <div class="account-referral-content rte mb-0">
        <p> {{ 'customer.account.top_referral_banner.content' | t }} </p>
      </div>
    </div>

    <div class="w-full sm:w-auto sm:flex-1 pt-1">
      <a href="{{ section.settings.button_link }}" class="btn btn-sm btn-white text-lg m-0 py-4 px-6">
        {{ 'customer.account.top_referral_banner.button_text' | t }}
      </a>
    </div>

  </div>

</section>

{% schema %}
  {
    "name": "Referral Banner",
    "settings": [
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ]
  }
{% endschema %}

